<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    xmlns:shimmer="http://schemas.android.com/tools">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_51sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:elevation="@dimen/_8sdp"
        android:id="@+id/cvcallslist">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="6">

            <ImageView
                android:id="@+id/imgstd"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_weight="1"

                app:srcCompat="@drawable/profileimg"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@id/tvStdname"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/tvStdname"
                app:layout_constraintTop_toTopOf="@id/tvStdname" />

            <TextView
                android:id="@+id/tvStdname"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:maxLength="7"
                android:layout_marginBottom="@dimen/_20sdp"

                android:layout_marginRight="@dimen/_2sdp"
                android:fontFamily="@font/roboto_medium"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_weight="1"
                android:textSize="@dimen/_13sdp"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvcity"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:singleLine="true"
                android:fontFamily="@font/opensans_regular"
                android:text="TextView" />

            <ImageView
                android:id="@+id/imgphonecall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_local_phone_black_24dp" />

            <ImageView
                android:id="@+id/imginfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_info_black_24dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>