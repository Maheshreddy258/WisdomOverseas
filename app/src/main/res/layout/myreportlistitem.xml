<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_29sdp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@color/report">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:text="Date"
            android:layout_weight="1"
            android:id="@+id/tvdate"
            android:textSize="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/allcalls"
            android:fontFamily="@font/roboto_medium"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:text="Time"
                android:layout_weight="1"
                android:id="@+id/tvtime"
                android:textSize="@dimen/_12sdp"
                android:gravity="right"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/allcalls"
                android:fontFamily="@font/roboto_medium"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_51sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:orientation="vertical">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_17sdp"
                   android:text="Calls"
                   android:textStyle="bold"
                   android:textAllCaps="true"
                   android:layout_marginStart="@dimen/_13sdp"
                   android:layout_marginTop="@dimen/_8sdp"
                   android:id="@+id/tvrepcall"
                   android:textColor="@color/grrey"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_33sdp"
                    android:text="99"
                    android:textColor="@color/allcalls"
                    android:id="@+id/tvcallcount"
                    android:layout_marginStart="@dimen/_23sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/_15sdp"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_17sdp"
                    android:text="Remainders"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:id="@+id/tvreprem"
                    android:textColor="@color/grrey"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_33sdp"
                    android:text="99"
                    android:textColor="@color/allcalls"
                    android:id="@+id/tvremcount"
                    android:layout_marginStart="@dimen/_33sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/_15sdp"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_17sdp"
                    android:text="Message"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_marginStart="@dimen/_23sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:id="@+id/tvrepmsg"
                    android:textColor="@color/grrey"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_33sdp"
                    android:text="view"
                    android:id="@+id/tvmsg"
                    android:layout_marginStart="@dimen/_23sdp"
                    android:textColor="@color/allcalls"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/_13sdp"/>



            </LinearLayout>





        </LinearLayout>


    </android.support.v7.widget.CardView>




</RelativeLayout>