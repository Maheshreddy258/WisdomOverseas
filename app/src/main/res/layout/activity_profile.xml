<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imgprofilesc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity">
    <ProgressBar
        android:id="@+id/profile_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/tool"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/line5"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="@dimen/_300sdp">

    <ImageView
        android:id="@+id/imageViewsc"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginStart="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_90sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_account_circle_black_24dp" />

    <TextView
        android:id="@+id/tvprofilesc"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:textAlignment="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        tools:text="Name" />

    <TextView
        android:id="@+id/tvrolesc"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        tools:text="Role" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_500sdp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_190sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:text="Name"
            android:textColor="@color/grrey"
            android:textSize="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColorHint="@color/bgdb"
            android:id="@+id/txtnamesc"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"

            android:hint="Name"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/txtnamesc2"
            android:layout_marginBottom="@dimen/_8sdp"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#c0c0c0"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="Username"
            android:textColor="@color/grrey"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:id="@+id/txtusernamesc" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:hint="UserName"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_13sdp"

            android:id="@+id/txtusernamesc2"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#c0c0c0"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:text="Designation"
            android:textColor="@color/grrey"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:id="@+id/txtdesigsc"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:hint="Designtion"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_13sdp"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:id="@+id/txtdesgsc2"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#c0c0c0"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:text="Email"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textColor="@color/grrey"
            android:textSize="@dimen/_10sdp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:id="@+id/txtemailsc"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:hint="Email"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="@dimen/_8sdp"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/txtemailsc2"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#c0c0c0"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:text="Phone Number"
            android:textColor="@color/grrey"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textAllCaps="true"
            android:id="@+id/txtphnosc"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:hint="PhoneNumeber"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="@dimen/_8sdp"
            android:textSize="@dimen/_13sdp"
            android:id="@+id/txtphnosc2"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#c0c0c0"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="BRANCH/AREA"
            android:textColor="@color/grrey"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:textAllCaps="true"
            android:id="@+id/txtaltnosc"/>

        <TextView
            android:id="@+id/txtaltnosc2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:hint="State"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>
    </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_profile_Snackbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/fab_margin"
        android:visibility="gone" />

</RelativeLayout>