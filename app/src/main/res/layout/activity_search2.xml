<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mahesh.wisdomoverseas.activities.SearchActivity2">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            />
    </android.support.design.widget.AppBarLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_44sdp"
        android:weightSum="4"
        android:id="@+id/line4">

        <!--<TextView
            android:id="@+id/tvHeadNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_weight="1"
            android:text="Number"
            android:textAllCaps="true"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:textColor="@color/bg"/>-->

        <TextView
            android:id="@+id/tvHeadname"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="name"
            android:textAllCaps="true"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:textColor="@color/allcalls"/>

        <TextView
            android:id="@+id/tvHeadlocality"

            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="locality"
            android:textAllCaps="true"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:textColor="@color/allcalls"/>

        <TextView

            android:id="@+id/tvHeadstatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_55sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="status"
            android:textAllCaps="true"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:textColor="@color/allcalls"/>


    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/reclyclerviewall"
        android:layout_below="@id/line4">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
