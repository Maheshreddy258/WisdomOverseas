<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_45sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_1sdp"
         android:elevation="@dimen/_8sdp"
            android:id="@+id/cvcallslist">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">



                <TextView
                    android:id="@+id/tvhistoryStdname"
                    android:layout_width="0dp"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                     android:maxLength="7"
                    android:singleLine="true"
                    android:textSize="@dimen/_12sdp"
                    app:autoSizeTextType="uniform"
                    android:text="TextView"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tvhidtorycalldate"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/_13sdp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                    android:fontFamily="@font/roboto_medium"
                    app:autoSizeTextType="uniform"
                    android:text="TextView"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvhidtorystatus"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLength="10"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/employee"
                    android:fontFamily="@font/roboto_medium"
                    app:autoSizeTextType="uniform"
                    android:text="TextView" />

              <!--  <TextView
                    android:id="@+id/tvhistorycallduration"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/roboto_medium"
                    app:autoSizeTextType="uniform"
                    android:maxLength="5"
                    android:text="TextView"
                    android:ellipsize="end" />-->


                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@drawable/mybutton"
                    android:text="Upload"
                    android:id="@+id/btnhistoryupload"/>



            </LinearLayout>
        </android.support.v7.widget.CardView>




    </RelativeLayout>