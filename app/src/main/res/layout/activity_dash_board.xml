                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_13sdp"
                app:cardElevation="0dp">

                <LinearLayout
